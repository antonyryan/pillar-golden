<div id="book-a-view-modal"
    class="modal fade"
    tabindex="-1"
    role="dialog"
    aria-labelledby="book-a-view-modal-label"
    aria-hidden="true"
    data-input-date-id="{{ form.date.vars.id }}"
    data-input-time-id="{{ form.time.vars.id }}"
    data-days-path="{{ path('app_booking_available_days', { id: form.vars.data.resource.id }) }}">
    <div class="modal-dialog" role="document">
        {% if resource.agent %}
            {{ form_start(form) }}
        {% endif %}
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="book-a-view-modal-label">{{ 'Book a view/meeting' | trans }}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {% if resource.agent %}
                        <div class="alert alert-success" style="display: none;"></div>
                        <div class="alert alert-danger" style="display: none;"></div>
                        <div class="fields">
                            <div class="row">
                                <div class="col-7">
                                    {{ form_row(form.date) }}
                                </div>
                                <div class="col-5">
                                    {{ form_row(form.time) }}
                                </div>
                            </div>
                            {% if form.moveInDate is defined %}
                                {{ form_row(form.moveInDate) }}
                            {% endif %}
                            {% if form.peopleCount is defined %}
                                {{ form_row(form.peopleCount) }}
                            {% endif %}
                        </div>
                    {% else %}
                        <div class="alert alert-danger">
                            No agent available to this resource
                        </div>
                    {% endif %}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">{% trans %}Close{% endtrans %}</button>
                    {% if resource.agent %}
                        <button type="submit" class="btn btn-primary">Send</button>
                    {% endif %}
                </div>
            </div>
        {% if resource.agent %}
            {{ form_end(form) }}
        {% endif %}
    </div>
</div>