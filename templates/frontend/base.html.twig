            <script>
                const GpApp = {
                    baseUrl: '{{ app.request.baseUrl() }}/{{ app.request.locale }}',
                    siteRoot: '{{ app.request.getSchemeAndHttpHost() }}'
                };
                if (GpApp.baseUrl.slice(-1) !== '/') {
                    GpApp.baseUrl = GpApp.baseUrl + '/';
                }
                $(document).ready(function () {
                    $(window).scroll(function () {
                        if ($(document).scrollTop() > 180) {
                            $('nav').addClass('nav-secondary-color');
                            $('nav').removeClass('nav-primary-color');
                        } else {
                            $('nav').removeClass('nav-secondary-color');
                            $('nav').addClass('nav-primary-color');
                        }
