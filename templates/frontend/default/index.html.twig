            <h1 class="mega-title text-center">{% trans %}Featured properties{% endtrans %}</h1>
            <div class="row mt-5" v-if="loading">
                <div class="col-lg-4 col-md-6 mb-4" v-for="i in 10">
                    <property-item v-bind:item="placeholder" />
                </div>
            </div>
            <div class="mt-5" v-if="!loading && properties.length === 0">
                <div class="alert alert-warning p-3 text-center" v-text="propertyErrorMessage">
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-lg-4 col-md-6 mb-4"  v-for="item in properties">
