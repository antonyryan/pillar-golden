{% extends 'frontend/base.html.twig' %}

{% block title %} {{ 'Subscribe' | trans }} | {{ parent() }}{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('subscribe') }}
	<style>body { background-color: #333; }</style>
{% endblock %}

{% block body %}
	<div class="page navbar-offset">
		<div class="container">
			<div class="card bg-light">
				<article class="card-body mx-auto" style="max-width: 400px;">
					<h4 class="card-title mt-3 text-center">{{ 'Create Account' | trans }}</h4>
					{{ form_start(form, { 'attr': { 'id': 'user-form'} }) }}
						<div class="col-md-12">
							{% include 'includes/flashMessages.html.twig' %}
							{% if not form.vars.valid %}
								<ul>
									{% for error in form.vars.errors %}
										<li>
											<p class="text-danger">
												<b>{{ error.message }}</b>
											</p>
										</li>
									{% endfor %}
								</ul>
							{% endif %}
						</div>

						{% if form.parentInviteCode is defined %}
							{{ form_row(form.parentInviteCode) }}
						{% endif %}

						{{ form_row(form.name) }}

						{{ form_row(form.address) }}

						{{ form_row(form.phone, { label: 'Phone number' | trans}, { 'attr': { 'placeholder': 'Phone number', 'class': 'phone-field'} }) }}

						{{ form_row(form.email.first, { label: 'E-mail address' | trans}, { 'attr': { 'placeholder': 'E-mail address'} }) }}

						{{ form_row(form.email.second, { label: 'Confirm e-mail address' | trans}, { 'attr': { 'placeholder': 'Confirm e-mail address'} }) }}
						
						{{ form_row(form.plainPassword.first, { label: 'Password' | trans}, { 'attr': { 'placeholder': 'Password'} }) }}

						{{ form_row(form.plainPassword.second, { label: 'Password confirmation' | trans}, { 'attr': { 'placeholder': 'Password confirmation'} }) }}

						<div class="form-group">
							<button type="submit" class="btn btn-primary btn-block">
								{{'Create Account' | trans }}
							</button>
						</div>
						
						<p class="text-center">{{'Have an account?' | trans }}
							<a href="{{ path('dashboard_login') }}">{{ 'Log In' | trans }}</a>
						</p>
					{{ form_end(form) }}
				</article>
			</div>
			<!-- card.// -->
		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('subscribe') }}
{% endblock %}
