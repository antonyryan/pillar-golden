{% set url = absolute_url(path('app_home')) %}
<!doctype html>
<html> 
    <table style="border-collapse:collapse;font-family:Arial,'Helvetica Neue',Helvetica,sans-serif" 
           width="100%;" 
           cellspacing="0" 
           cellpadding="0" 
           border="0">
        <tbody>
            <tr style="width: 100%; background-color: #f5f5f5; color: #333; font: normal 14px sans-serif; clear: both; left: 0; right: 0; top: 0; height: 56px;" bgcolor="#f5f5f5">
                <td style="padding-top:10px;padding-left:10px;padding-right:20px" valign="top">
                    <table style="border-collapse:collapse" width="100%;" cellspacing="0" cellpadding="0" border="0">
                        <tbody>
                            <tr>
                                <td style="height:43px" width="144" valign="top" align="left">

                                </td>
                                <td style="padding-top:8px" valign="top" align="right">
                                    <a  title="Gold Pillar" href="{{ url }}" style="color: #3f3732; font: normal 78% sans-serif;" target="_blank">
                                        Goldpillar
                                    </a> 
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
            <tr style="background-color: #946b00; border-bottom: 2px solid #ca990d; clear: both; color: #606060; left: 0; right: 0; top: 52px; width: 100%; font-family: sans-serif; height: 25px; line-height: 22px; box-sizing: border-box;">
                <td style="padding-top:10px;padding-left:10px;padding-right:20px" valign="top">

                </td>
            </tr>
            <tr style="border:1px solid #f5f5f5">
                <td style="padding-top: 20px" valign="top">
                    <table style="width:100%;margin:0 auto" width="100%" cellspacing="0" cellpadding="0" border="0">
                        <tbody>

                            <tr>
                                <td style="padding-top:10px" valign="top">
                                    {% block msg %}

                                    {% endblock %}
                                </td>
                            </tr>																		
                            <tr>
                                <td style="padding:10px 21px 21px 21px" valign="top">
                                    {% block content %}
                                    {% endblock %}
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </td>
            </tr>
            <tr style="color:#3f3732;height:51px;text-align:center;font-size:14px;line-height:1.7em;border:1px solid #ca990d" 
                bgcolor="#946b00">
                <td style="padding-top:5px;padding-left:10px;padding-right:20px" valign="top">
                    <table style="border-collapse:collapse" width="100%;" cellspacing="0" cellpadding="0" border="0">
                        <tbody>
                            <tr style="color:#777777;font-size: 11px;margin-bottom: 20px;line-height: 1.42857143;">
                                <td style="" valign="top">  				
                                </td>						
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>
</html>