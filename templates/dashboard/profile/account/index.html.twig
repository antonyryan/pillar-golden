{% extends 'dashboard/base.html.twig' %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('dashboard/profile/account') }}
{% endblock %}

{% block body %}
{% set baseUrl = path('dashboard_profile_account_index') ~ "avatar" %}
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Dashboard</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">{% trans %}Account{% endtrans %}</li>
            </ol>
        </nav>
    </div>
    <header role="heading">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-sm-6 col-xs-6">
                    <h1>
                        {% trans %}Account{% endtrans %}
                    </h1>
                    <p class="hidden-xs"> {% trans %}Description{% endtrans %}</p>
                </div>
            </div>
        </div>
    </header>
    <div class="container" id="app">
        {% include 'includes/flashMessages.html.twig' %}
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="nav-item">
                <a href="#tab-profile" class="nav-link active" role="tab" data-toggle="tab">
                    {% trans %}Profile{% endtrans %}
                </a>
            </li>
            <li role="presentation" class="nav-item">
                <a href="#tab-executive-club" class="nav-link" role="tab" data-toggle="tab">
                    {% trans %}Executive club{% endtrans %}
                </a>
            </li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="tab-profile">
            
            <div class="row">
            <div class="col-md-4">
            <avatar base-url="{{ baseUrl }}" />
            </div>
            </div>

            
            </div>
            <div role="tabpanel" class="tab-pane active" id="tab-executive-club"></div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        const userAvatar = "{{ app.user.avatar|default(asset('images/nobody_m.original.jpg')) }}";
    </script>
    {{ encore_entry_script_tags('dashboard/profile/account') }}
{% endblock %}

