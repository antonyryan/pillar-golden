{% if removeForm is defined and not removeForm is null %}
    <div class="modal fade" id="remove-modal" tabindex="-1" role="dialog">
        {{ form_start(removeForm, { 'attr': { 'data-parsley-validate': 'true' } }) }}
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Remove resource</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        {{ form_row(removeForm.removalReason) }}
                        {{ form_row(removeForm.removalDetails) }}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Yes, remove it</button>
                    </div>
                </div>
            </div>
        {{ form_end(removeForm) }}
    </div>
{% endif %}